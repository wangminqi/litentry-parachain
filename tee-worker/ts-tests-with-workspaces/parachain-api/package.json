{
	"name": "parachain-api",
	"type": "module",
	"license": "ISC",
	"scripts": {
		"build": "yarn get:meta && yarn generate:defs && yarn generate:meta && yarn format && tsc",
		"get:meta": "curl -s -H \"Content-Type: application/json\" -d '{\"id\":\"1\", \"jsonrpc\":\"2.0\", \"method\": \"state_getMetadata\", \"params\":[]}' http://localhost:9944 > litentry-parachain-metadata.json",
		"generate:defs": "ts-node --esm node_modules/.bin/polkadot-types-from-defs  --package parachain-api/interfaces --input src/interfaces --endpoint ./litentry-parachain-metadata.json",
		"generate:meta": "ts-node --esm node_modules/.bin/polkadot-types-from-chain --package parachain-api/interfaces --output src/interfaces --endpoint ./litentry-parachain-metadata.json --strict",
		"format": "yarn prettier --write .",
		"compile": "tsc"
	},
	"dependencies": {
		"@polkadot/api": "^10.9.1",
		"yarn": "^1.22.19"
	},
	"devDependencies": {
		"@polkadot/typegen": "^10.9.1",
		"prettier": "2.8.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4"
	}
}
