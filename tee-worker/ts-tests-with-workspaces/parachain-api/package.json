{
	"name": "parachain-api",
	"license": "ISC",
	"scripts": {
		"build": "tsc",
		"format": "yarn prettier --write .",
		"gen-meta": "yarn gen-meta:parachain",
		"gen-meta:parachain": "curl -s -H \"Content-Type: application/json\" -d '{\"id\":\"1\", \"jsonrpc\":\"2.0\", \"method\": \"state_getMetadata\", \"params\":[]}' http://localhost:9944 > litentry-parachain-metadata.json",
		"gen-type:parachain": "yarn gen-type-parachain:defs && yarn gen-type-parachain:meta && yarn format",
		"gen-type-parachain:defs": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs  --package parachain-api --input ./parachain-interfaces --endpoint ./litentry-parachain-metadata.json",
		"gen-type-parachain:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --package parachain-api ./parachain-interfaces --endpoint ./litentry-parachain-metadata.json"
	},
	"dependencies": {
		"@polkadot/api": "^10.7.1",
		"yarn": "^1.22.19"
	},
	"devDependencies": {
		"@polkadot/typegen": "^9.14.2",
		"prettier": "2.8.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4"
	}
}
