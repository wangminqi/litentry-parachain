{
	"license": "ISC",
	"scripts": {
		"build": "tsc --build",
		"format": "yarn prettier --write .",
		"gen-meta": "yarn gen-meta:sidechain",
		"gen-meta:sidechain": "../../bin/integritee-cli print-sgx-metadata-raw > litentry-sidechain-metadata.json",
		"gen-type:sidechain": "yarn gen-type-sidechain:defs && yarn gen-type-sidechain:meta && yarn format",
		"gen-type-sidechain:defs": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs  --package . --input ./sidechain-interfaces --endpoint ./litentry-sidechain-metadata.json",
		"gen-type-sidechain:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --package . --output ./sidechain-interfaces --endpoint ./litentry-sidechain-metadata.json"
	},
	"dependencies": {
		"@noble/ed25519": "^1.7.3",
		"@polkadot/api": "^10.7.1",
		"@polkadot/keyring": "^12.2.1",
		"@polkadot/typegen": "^9.14.2",
		"@polkadot/types": "^10.7.1",
		"add": "^2.0.6",
		"ajv": "^8.12.0",
		"js-base64": "^3.7.5",
		"micro-base58": "^0.5.1",
		"scale-ts": "^0.2.11",
		"websocket-as-promised": "^2.0.1",
		"ws": "^8.8.1",
		"yarn": "^1.22.19"
	},
	"devDependencies": {
		"@ethersproject/providers": "^5.7.2",
		"@types/ws": "^8.5.3",
		"ethers": "^5.7.2",
		"prettier": "2.8.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4"
	},
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	}
}
